{
    "name": "Color Picker",
    "description": "A color picker extention",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page":"options.html",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/piker16.png",
        "32": "/images/piker32.png",
        "48": "/images/piker48.png"
    }
}